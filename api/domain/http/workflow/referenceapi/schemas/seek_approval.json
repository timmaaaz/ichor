{
    "type": "object",
    "required": ["approvers", "approval_type"],
    "properties": {
        "approvers": {
            "type": "array",
            "description": "User IDs who can approve",
            "items": {"type": "string", "format": "uuid"}
        },
        "approval_type": {
            "type": "string",
            "enum": ["any", "all", "majority"],
            "description": "How many approvers needed"
        },
        "timeout_hours": {
            "type": "number",
            "description": "Timeout in hours before escalation"
        },
        "escalation_user_id": {
            "type": "string",
            "format": "uuid",
            "description": "User ID to escalate to on timeout"
        },
        "approval_message": {
            "type": "string",
            "description": "Message to show approvers - supports template variables"
        },
        "display_fields": {
            "type": "array",
            "description": "Fields to display in approval request",
            "items": {"type": "string"}
        }
    }
}
