{
    "type": "object",
    "required": ["recipients", "subject", "body"],
    "properties": {
        "recipients": {
            "type": "array",
            "description": "Email addresses to send to - supports template variables",
            "items": {"type": "string", "format": "email"}
        },
        "cc": {
            "type": "array",
            "description": "CC email addresses",
            "items": {"type": "string", "format": "email"}
        },
        "bcc": {
            "type": "array",
            "description": "BCC email addresses",
            "items": {"type": "string", "format": "email"}
        },
        "subject": {
            "type": "string",
            "description": "Email subject - supports template variables"
        },
        "body": {
            "type": "string",
            "description": "Email body (HTML or plain text) - supports template variables"
        },
        "is_html": {
            "type": "boolean",
            "description": "Whether body is HTML (default: false)"
        },
        "reply_to": {
            "type": "string",
            "format": "email",
            "description": "Reply-to address"
        }
    }
}
